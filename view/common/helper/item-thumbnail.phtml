<?php

if ($media = $item->media()) {
    $medium = $media[0]->thumbnailUrl('medium');
    $large = $media[0]->thumbnailUrl('large');
    if ($medium && $large) {
        $thumbnail = $this->thumbnail($item, 'medium', [
            'srcset' => $medium . ' 200w, ' . $large . ' 800w',
            'sizes' => '(max-width: 640px) 50vw, 25vw' ]);
        echo $item->linkRaw($thumbnail);
    }
}

